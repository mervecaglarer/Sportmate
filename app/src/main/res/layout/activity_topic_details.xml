<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        tools:context=".TopicDetailsActivity" >

        <TextView
            android:id="@+id/txtOwnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/nunito"
            android:text="Owner:"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailContent" />

        <TextView
            android:id="@+id/txtAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito"
            android:text="Address:"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/txtPriceLabel"
            app:layout_constraintTop_toBottomOf="@+id/txtPriceLabel" />

        <TextView
            android:id="@+id/txtDetailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:inputType="textNoSuggestions"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/txtDetailPrice"
            app:layout_constraintTop_toTopOf="@+id/txtAddressLabel" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleContainer"
            android:layout_width="0dp"
            android:layout_height="73dp"
            android:background="@color/txtColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtDetailTitle"
                android:layout_width="361dp"
                android:layout_height="28dp"
                android:fontFamily="@font/nunito"
                android:gravity="center"
                android:inputType="textNoSuggestions"
                android:textColor="@color/bgColor"
                android:textSize="23sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btnContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/nunito"
            android:text="Contact"
            android:textColor="@color/txtColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDetailAddress" />

        <TextView
            android:id="@+id/txtBranchLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito"
            android:text="Branch:"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/txtOwnerLabel"
            app:layout_constraintTop_toBottomOf="@+id/txtOwnerLabel" />

        <TextView
            android:id="@+id/txtDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtDateLabel"
            app:layout_constraintStart_toStartOf="@+id/txtDetailBranch"
            app:layout_constraintTop_toTopOf="@+id/txtDateLabel" />

        <TextView
            android:id="@+id/txtDetailBranch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtBranchLabel"
            app:layout_constraintStart_toStartOf="@+id/txtDetailUsername"
            app:layout_constraintTop_toTopOf="@+id/txtBranchLabel" />

        <TextView
            android:id="@+id/txtDetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtPriceLabel"
            app:layout_constraintStart_toStartOf="@+id/txtDetailTime"
            app:layout_constraintTop_toTopOf="@+id/txtPriceLabel" />

        <TextView
            android:id="@+id/txtPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito"
            android:text="Price (â‚º):"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/txtTimeLabel"
            app:layout_constraintTop_toBottomOf="@+id/txtTimeLabel" />

        <TextView
            android:id="@+id/txtDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito"
            android:text="Date:"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/txtBranchLabel"
            app:layout_constraintTop_toBottomOf="@+id/txtBranchLabel" />

        <TextView
            android:id="@+id/txtTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito"
            android:text="Time:"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="@+id/txtDateLabel"
            app:layout_constraintTop_toBottomOf="@+id/txtDateLabel" />

        <TextView
            android:id="@+id/txtDetailTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtTimeLabel"
            app:layout_constraintStart_toStartOf="@+id/txtDetailDate"
            app:layout_constraintTop_toTopOf="@+id/txtTimeLabel" />

        <TextView
            android:id="@+id/txtDetailUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:clickable="true"
            android:fontFamily="@font/nunito"
            android:inputType="textNoSuggestions"
            android:textAlignment="center"
            android:textColor="@color/txtColor"
            android:textColorLink="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtOwnerLabel"
            app:layout_constraintStart_toEndOf="@+id/txtOwnerLabel"
            app:layout_constraintTop_toTopOf="@+id/txtOwnerLabel" />

        <TextView
            android:id="@+id/txtDetailContent"
            android:layout_width="308dp"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/nunito"
            android:inputType="textMultiLine|textNoSuggestions"
            android:textAlignment="textStart"
            android:textColor="@color/txtColor"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>